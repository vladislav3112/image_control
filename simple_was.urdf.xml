<robot name="pendulum">

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.8 0.8 0.8 1"/>
    </material>

    <material name="green">
        <color rgba="0.2 0.8 0.2 0.8"/>
    </material>

    <link name="world"/>
    <link name="base">
        <visual>
            <geometry>
                <sphere radius="0.1"/>   
            </geometry>
            <material name="white"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

<link name="link_1">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.5"/>   
            </geometry>
            <origin xyz="0.25 0 0.0" rpy="0 1.5708 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_4">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.5"/>   
            </geometry>
            <origin xyz="0.0 00 0.0" rpy="0 0 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_eef1">
        <visual>
            <geometry>
                <sphere radius="0.05"/>   
            </geometry>
            <origin xyz="0.0 00 0.0" rpy="0 0 0" />
            <material name="black"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.5"/>   
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 1.5708 0" />
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_eef2">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_3">
        <inertial>
            <mass value="0"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <link name="link_eef3">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.02"/>   
            </geometry>
            <origin xyz="0 0 0.0" rpy="0 0 0" />
            <material name="green"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>     
        <origin xyz="0 0 0.3" rpy="0 0 0"/>
    </joint>

    <joint name="joint_4" type="prismatic">
        <parent link="base"/>
        <child link="link_4"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-0.38" upper="0" velocity="0.5"/>
    </joint>

    <joint name="joint_1" type="revolute">
        <parent link="base"/>
        <child link="link_1"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_eef1" type="fixed">
        <parent link="link_1"/>
        <child link="link_eef1"/>     
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="link_eef1"/>
        <child link="link_2"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="joint_eef2" type="fixed">
        <parent link="link_2"/>
        <child link="link_eef2"/>     
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="joint_3" type="revolute">
        <parent link="link_eef2"/>
        <child link="link_3"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <joint name="joint_eef3" type="fixed">
        <parent link="link_3"/>
        <child link="link_eef3"/>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
    </joint>

</robot>